<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewRobotoBoldBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewRobotoBold16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/item_size_16</item>
        <item name="android:textColor">@color/gray_nobel</item>
    </style>

    <style name="TextViewBoldBlack14">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/item_margin_24</item>
        <item name="android:paddingTop">@dimen/item_margin_12</item>
        <item name="android:paddingBottom">@dimen/item_margin_12</item>
        <item name="android:textSize">@dimen/item_size_14</item>
        <item name="android:background">@color/gray_toolbar</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputPadding48">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/item_margin_48</item>
        <item name="android:paddingLeft">@dimen/item_margin_48</item>
    </style>

    <style name="TextInputRounded14">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_rounded_edit_text</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:padding">@dimen/item_margin_14</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textColorHint">@color/colorDimGray</item>
        <item name="android:textSize">@dimen/item_size_14</item>
    </style>

    <style name="TextRobotoBlack12">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_size_12</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">@dimen/item_margin_8</item>
    </style>

    <style name="EditTextRobotoBlack16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/item_margin_12</item>
        <item name="android:background">@drawable/bg_rounded_edit_text</item>
        <item name="android:textSize">@dimen/item_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorDimGray</item>
    </style>

</resources>
