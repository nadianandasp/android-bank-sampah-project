<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context=".ui.TabunganFragment"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_margin_32"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_greeting"
                android:textColor="@android:color/black"
                android:textSize="@dimen/item_size_20" />

            <TextView
                android:id="@+id/tv_nama_nasabah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLines="2"
                android:text="@string/value_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/item_size_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_logo_sahitya"
                android:layout_weight="1"
                app:fontFamily="@font/nova_square"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/item_size_10"
                android:layout_gravity="end"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/item_margin_38"
                android:layout_weight="1"
                android:paddingTop="@dimen/item_margin_4"
                android:layout_marginLeft="@dimen/item_margin_2"
                android:layout_marginStart="@dimen/item_margin_2"
                android:src="@drawable/ic_recycle_sign_1_93px"
                android:layout_gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_32">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/item_size_14"
                android:text="@string/label_savings_greeting" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_32"
            android:paddingLeft="@dimen/item_margin_2"
            android:paddingRight="@dimen/item_margin_2"
            android:paddingBottom="@dimen/item_margin_4"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                card_view:cardElevation="@dimen/item_margin_10"
                app:cardCornerRadius="@dimen/item_radius_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/item_margin_8"
                    android:background="@drawable/shadow_card_view"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_amount"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/item_margin_6"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_currency"
                            android:textStyle="bold"
                            android:textSize="@dimen/item_size_20"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:id="@+id/tv_total_uang"
                            android:layout_width="@dimen/item_margin_186"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin_8"
                            android:layout_marginStart="@dimen/item_margin_8"
                            android:text="@string/value_amount"
                            android:textStyle="bold"
                            android:textSize="@dimen/item_size_20"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="@dimen/item_margin_0"
                            android:layout_height="wrap_content"
                            android:text="@string/label_details"
                            android:textAlignment="viewEnd"
                            android:layout_weight="1"
                            android:textSize="@dimen/item_size_12"
                            android:gravity="end" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/item_margin_2"
            android:paddingRight="@dimen/item_margin_2"
            android:paddingBottom="@dimen/item_margin_4"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                card_view:cardElevation="@dimen/item_margin_10"
                app:cardCornerRadius="@dimen/item_radius_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/item_margin_8"
                    android:background="@drawable/shadow_card_view"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_weight"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/item_margin_6"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_amount_of_waste"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/value_weight"
                            android:textStyle="bold"
                            android:textSize="@dimen/item_size_20"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="@dimen/item_margin_186"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin_8"
                            android:layout_marginStart="@dimen/item_margin_8"
                            android:text="@string/unit_weight"
                            android:textStyle="bold"
                            android:textSize="@dimen/item_size_20"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="@dimen/item_margin_0"
                            android:layout_height="wrap_content"
                            android:text="@string/label_details"
                            android:textAlignment="viewEnd"
                            android:layout_weight="1"
                            android:textSize="@dimen/item_size_12"
                            android:gravity="end" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/item_margin_2"
            android:paddingRight="@dimen/item_margin_2"
            android:paddingBottom="@dimen/item_margin_4"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                card_view:cardElevation="@dimen/item_margin_10"
                app:cardCornerRadius="@dimen/item_radius_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/item_margin_8"
                    android:background="@drawable/shadow_card_view"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/riwayat_transaksi"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="@dimen/item_margin_6"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_currency"
                            android:textStyle="bold"
                            android:textSize="@dimen/item_size_20"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:id="@+id/tv_riwayat_transaksi"
                            android:layout_width="@dimen/item_margin_186"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin_8"
                            android:layout_marginStart="@dimen/item_margin_8"
                            android:text="@string/value_amount"
                            android:textStyle="bold"
                            android:textSize="@dimen/item_size_20"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="@dimen/item_margin_0"
                            android:layout_height="wrap_content"
                            android:text="@string/label_details"
                            android:textAlignment="viewEnd"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:textSize="@dimen/item_size_12"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>