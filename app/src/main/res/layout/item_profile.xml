<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/container_menu_profile"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_margin_10"
    app:cardCornerRadius="@dimen/item_margin_0"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardElevation="-30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/item_margin_8"
        android:paddingBottom="@dimen/item_margin_8"
        android:paddingLeft="@dimen/item_margin_110">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_disbursement"/>

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_disbursement"
            android:textSize="@dimen/item_size_14"
            app:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/item_margin_16"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>